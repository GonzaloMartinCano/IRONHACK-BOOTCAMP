<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Edite montaña rusa</h1>
    </div>

    <div class="col-md-6">

      <form action="/coasters/edit?id={{coaster.id}}" method="POST">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" placeholder="{{coaster.name}}" value="{{coaster.name}}" class="form-control" id="name-input">
        </div>
        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" placeholder="{{coaster.description}}" value="{{coaster.description}}" class="form-control" id="description-input">
        </div>
        <div class="form-group">
          <label for="inversions-input">Inversiones</label>
          <input name="inversions" type="number" placeholder="{{coaster.inversions}}" value="{{coaster.inversions}}" class="form-control" id="inversions-input">
        </div>
        <div class="form-group">
          <label for="length-input">Longitud</label>
          <input name="length" type="number"  placeholder="{{coaster.length}}" value="{{coaster.length}}" class="form-control" id="length-input">
        </div>
        <div class="form-group">
          <label for="park-list">Parque en el que se encuentra: {{coaster.park}}"</label>
          <select name="park" class="form-control" id="park-list">
            <option>{{coaster.park}}</option>
            {{#each parks}}
              <option value="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>

        <button type="submit" class="btn btn-dark">Editar montaña rusa</button>
        <a href="/coasters" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>